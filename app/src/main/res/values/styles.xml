<resources>

    <!-- Base application theme. -->
    <!-- Main style. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Movie card style. -->
    <style name="MovieCardLinear">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="PosterIMG">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:adjustViewBounds">true</item>
        <!--<item name="android:paddingTop">12dp</item>-->
        <!--<item name="android:paddingBottom">0dp</item>-->
        <!--<item name="android:paddingLeft">12dp</item>-->
        <!--<item name="android:paddingRight">12dp</item>-->
    </style>
    
    <style name="TitleTXT">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorBlack52</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <!-- Movie details style. -->
    <style name="MovieDetailsScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="DetailsIMG">
        <!--<item name="android:adjustViewBounds">true</item>-->
        <item name="android:background">@color/colorBlack</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">500dp</item>
    </style>

    <style name="DescriptionTXT">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorBlack87</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="overviewTXT">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
